@model BeatStreamr.Models.UserHeaderImageViewModel

<form asp-action="HeaderImage" asp-control="Users" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="HeaderImagePath" class="control-label"></label>
        <input type="file" accept="image/*" name="headerPic" asp-for="HeaderImagePath" />
        <span asp-validation-for="HeaderImagePath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}